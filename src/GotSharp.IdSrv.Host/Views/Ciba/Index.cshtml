@model Duende.IdentityServer.Models.BackchannelUserLoginRequest

<div class="ciba-page">
    <div class="lead">
        @if (Model.Client.LogoUri != null)
        {
            <div class="client-logo"><img src="@Model.Client.LogoUri"></div>
        }
        <h1>
            @Model.Client.ClientName
            <small class="text-muted">is requesting your permission</small>
        </h1>
        
        <h3>
            Verify that this identifier matches what the application is displaying:
            <em class="text-primary">@Model.BindingMessage</em>
        </h3>

        <p>
            Do you wish to continue?
        </p>
        <div>
            <a class="btn btn-primary" asp-action="Consent" asp-controller="Ciba" asp-route-id="@Model.InternalId">Yes, Continue</a>
        </div>
        
    </div>
</div>