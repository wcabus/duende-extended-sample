@model GotSharp.IdSrv.Host.Controllers.Account.ConfirmEmailViewModel
@inject IViewLocalizer _localizer

<div class="confirm-email-page d-flex flex-column justify-content-center align-items-center">
    <div class="d-flex flex-column col-login-ui">
        <div class="lead">
            <h1>@_localizer["Confirm email"]</h1>
        </div>
        <div class="d-flex flex-md-row flex-column flex-fill align-items-stretch">
            <partial name="_ValidationSummary" />
            @if (Model.IsCompleted)
            {
                <div class="card w-100">
                    <div class="card-body">
                        <p>@_localizer["Thank you for confirming your email."]</p>
                    </div>
                </div>
            }
            else if (!string.IsNullOrWhiteSpace(Model.Error))
            {
                <div class="text-danger">
                    @Html.Raw(Model.Error)
                </div>
            }
        </div>
    </div>
</div>