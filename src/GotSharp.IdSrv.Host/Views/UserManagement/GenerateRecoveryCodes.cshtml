@model MinimumMfaViewModel
@inject IViewLocalizer _localizer
<h3>@_localizer["Generate Multi-Factor Authentication Recovery Codes"]</h3>
<partial name="_StatusMessage" model="@(TempData["StatusMessage"])" />
<div class="alert alert-warning" role="alert">
    <p>
        <i class="bi bi-exclamation-triangle"></i>
        <strong>@_localizer["Store these codes in a safe place."]</strong>
    </p>
    <p>
    @_localizer["If you lose your device and don't have the recovery codes you will lose access to your account."]
    </p>
    @if (Model.HasAuthenticator)
    {
        <p>@_localizer.GetHtml("ResetAuthenticatorExplanation", Url.Action("ResetAuthenticator")!)</p>
    }
</div>
<div>
    <form method="post" class="form-group" asp-action="GenerateRecoveryCodes">
        <button class="btn btn-danger" type="submit">@_localizer["Generate Recovery Codes"]</button>
    </form>
</div>