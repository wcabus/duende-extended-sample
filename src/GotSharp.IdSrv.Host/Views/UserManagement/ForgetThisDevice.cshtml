@inject IViewLocalizer _localizer
<h3>@_localizer["Forget This Device"]</h3>
<partial name="_StatusMessage" model="@(TempData["StatusMessage"])" />

<div class="alert alert-warning" role="alert">
    <p>@_localizer.GetHtml("ForgetDeviceAlert")</p>
</div>

<div>
    <form method="post" class="form-group" asp-action="ForgetThisDevice">
        <button class="btn btn-danger" type="submit">@_localizer["Forget This Device"]</button>
    </form>
</div>